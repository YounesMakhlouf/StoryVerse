<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="description"
          content="StoryVerse is an online platform for writers and readers to share, discover and connect through stories. Join us to explore a world of imagination and creativity.">
    <title>{% block title %}StoryVerse{% endblock %}</title>
    <link href="{{ asset('build/images/favicon/favicon-16x16.png') }}" rel="icon" sizes="16x16" type="image/png">
    <link href="{{ asset('build/images/favicon/favicon-32x32.png') }}" rel="icon" sizes="32x32" type="image/png">
    <link href="{{ asset('build/images/favicon/android-chrome-192x192.png') }}" rel="icon" sizes="192x192"
          type="image/png">
    <link href="{{ asset('build/images/favicon/android-chrome-512x512.png') }}" rel="icon" sizes="512x512"
          type="image/png">
    <link href="{{ asset('build/images/favicon/apple-touch-icon.png') }}" rel="apple-touch-icon">

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>
{% block header %}
    {% include "layout/header.html.twig" %}
{% endblock %}
{% block body %}
    <!-- Success and Error Messages -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.18/dist/sweetalert2.min.js"></script>
    {% set successMessages = app.flashes('success') %}
    {% set errorMessages = app.flashes('error') %}
    {% for message in successMessages %}
    <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    {% for message in errorMessages %}
    <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    <!-- Flash Messages -->
    {% for flashMessage in app.session.flashbag.get('sweetalert2') %}
        {{ flashMessage|raw }}
    {% endfor %}
{% endblock %}
{% block footer %}
    {% include "layout/footer.html.twig" %}
{% endblock %}
{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"
            integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS"
            crossorigin="anonymous"></script>
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>