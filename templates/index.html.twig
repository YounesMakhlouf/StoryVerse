{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <main id="main">
        <!-- ======= Hero Section ======= -->
        <section aria-label="Hero section introducing StoryVerse platform" id="hero">
            <div class="container">
                <div class="row justify-content-between">
                    <div class="col-lg-7 pt-5 pt-lg-0 order-2 order-lg-1 d-flex align-items-center">
                        <div data-aos="zoom-out">
                            <h1 class="mb-4">Welcome to <span>StoryVerse</span>, where creativity knows no bounds.</h1>
                            <p class="description"> Join our community of passionate storytellers to collaborate on
                                captivating tales and
                                create the perfect ending. Let your imagination run wild and get inspired by the endless
                                possibilities.
                                Don't just read stories, be a part of creating them. Get involved and start writing
                                today.</p>
                            <div class="text-center text-lg-start">
                                <a class="btn btn-primary btn-get-started scrollto" data-aos="zoom-out"
                                   data-aos-delay="400"
                                   href="{{ path('app_register') }}">Start writing now</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 order-1 order-lg-2 hero-img" data-aos="zoom-out" data-aos-delay="300">
                        <img alt="People sharing stories around a campfire" class="img-fluid rounded animated mx-auto"
                             src="{{ asset('build/images/hero-img.webp') }}">
                    </div>
                </div>
            </div>
            <svg aria-label="Waves decoration" class="hero-waves" preserveAspectRatio="none"
                 viewBox="0 24 150 28" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                <desc>Decorative waves for the hero section</desc>
                <defs>
                    <path d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
                          id="wave-path"></path>
                </defs>
                <g class="wave1">
                    <use fill="rgba(255,255,255, .1)" x="50" xlink:href="#wave-path" y="3"></use>
                </g>
                <g class="wave2">
                    <use fill="rgba(255,255,255, .2)" x="50" xlink:href="#wave-path" y="0"></use>
                </g>
                <g class="wave3">
                    <use fill="#fff" x="50" xlink:href="#wave-path" y="9"></use>
                </g>
            </svg>
        </section>
        <!-- End Hero Section -->

        <!-- ======= Trending Section ======= -->
        <section class="trending" id="trending">
            <div class="container">
                <header class="section-title" data-aos="fade-up">
                    <h2>Trending Stories</h2>
                    <p>Discover Our Hottest Stories üî•üî•</p>
                </header>
                <article class="row row-cols-1 row-cols-md-3 g-4" data-aos="fade-left">
                    {% for story in trendingStories %}
                        <div class="col">
                            <a href="{{ path('app_storypage', { 'id': story.id }) }}" rel="bookmark">
                                <div class="card h-100" data-aos="zoom-in" data-aos-delay="0">
                                    <img alt="" class="card-img-top"
                                         src="{{ asset ('uploads/story_directory/'~ story.storyImage) }}">
                                    <div class="card-body">
                                        <h5 class="card-title">{{ story.title }}</h5>
                                        <p class="card-text">{# awel joumal #}</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <small class="text-body-secondary">{{ story.updatedAt | ago }}</small>
                                            <small class="text-body-secondary">{{ story.likes | length }} ‚ù§Ô∏è</small>
                                        </div>
                                        <span class="badge rounded-pill {{ story.genre }}"> {{ story.genre }} </span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    {% endfor %}
                </article>
            </div>
        </section>
        <!-- End Trending Section -->

        <!-- ======= Team Section ======= -->
        <section class="team" id="team">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2>Our Team</h2>
                    <p>Meet Our Amazing Team</p>
                </div>
                <div class="row text-center justify-content-center" data-aos="fade-left">
                    {% for member in teamMembers %}
                        <div class="col-12 col-md-6 col-lg-4">
                            <div class="member" data-aos="zoom-in" data-aos-delay="100">
                                <div class="pic rounded-1">
                                    <img alt="{{ member.firstName ~ ' ' ~ member.lastName }}" class="img-fluid"
                                         src="{{ asset('build/images/team/' ~ member.firstName|lower ~ '.webp') }}">
                                </div>
                                <div class="member-info py-3 rounded-bottom-1">
                                    <h4 class="pb-2 mb-2 member-name">{{ member.firstName ~ ' ' ~ member.lastName }}</h4>
                                    <div class="member-position mb-2">{{ member.position }}</div>
                                    <div class="social">
                                        {% for network, link in member.social %}
                                            <a href="{{ link }}" rel="noopener noreferrer" target="_blank">
                                                <i class="fa-brands fa-{{ network }}"></i>
                                            </a>
                                        {% endfor %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </section>
        <!-- End Team Section -->

        <!-- ======= Contact Section ======= -->
        <section id="contact" class="contact">
            <div class="container">
                <div class="section-title" data-aos="fade-up">
                    <h2>Contact</h2>
                    <p>Contact Us</p>
                </div>
                <div class="row">
                    <div class="col-lg-4" data-aos="fade-right" data-aos-delay="100">
                        <div class="info">
                            <div class="address">
                                <i class="fa-sharp fa-solid fa-location-dot"></i>
                                <div class="contact-info">
                                    <h4>Location:</h4>
                                    <p>676 INSAT Centre Urbain Nord BP, Tunis Cedex 1080</p>
                                </div>
                            </div>
                            <div class="email">
                                <i class="fa-solid fa-envelope"></i>
                                <div class="contact-info">
                                    <h4>Email:</h4>
                                    <p>storyverse19@gmail.com</p>
                                </div>
                            </div>
                            <div class="phone">
                                <i class="fa-solid fa-phone"></i>
                                <div class="contact-info">
                                    <h4>Call:</h4>
                                    <p>+216 55 216 719</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8 mt-5 mt-lg-0" data-aos="fade-left" data-aos-delay="200">
                        <form {# action="{{ path('contact') }}" #} method="post" role="form" class="php-email-form">
                            <div class="row">
                                <div class="col-md-6 form-group">
                                    <label for="name">Your Name</label>
                                    <input type="text" name="name" class="form-control" id="name" required>
                                </div>
                                <div class="col-md-6 form-group mt-3 mt-md-0">
                                    <label for="email">Your Email</label>
                                    <input type="email" class="form-control" name="email" id="email" required>
                                </div>
                            </div>
                            <div class="form-group mt-3">
                                <label for="subject">Subject</label>
                                <input type="text" class="form-control" name="subject" id="subject" required>
                            </div>
                            <div class="form-group mt-3">
                                <label for="message">Message</label>
                                <textarea class="form-control p-2" name="message" rows="5" id="message"
                                          required></textarea>
                            </div>
                            <div class="text-center mt-3">
                                <button type="submit">Send Message</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Contact Section -->
    </main>
{% endblock %}

{% block header %}
    <header class="primary-header sticky-top top-0">
        <nav class="navbar navbar-expand-lg px-md-4" id="navbar">
            <div class="container-xxl">
                <a class="navbar-brand" href="{{ path('app_home') }}">
                    <img src="{{ asset('build/images/logo.webp') }}" alt="Logo" width="40" height="40"
                         class="d-inline-block align-text-top"/> <span>StoryVerse</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav ms-auto gap-3">
                        <li class="nav-item">
                            <a class="nav-link active scrollto" aria-current="page" href="#hero" title="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" href="#trending" title="Trending">Trending</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" href="#team" title="Team">Team</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link scrollto" href="#contact" title="Contact">Contact</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link" href="{{ path('app_login') }}" title="Login">Login</a>
                        </li>
                        <li class="nav-item ms-2 d-lg-inline d-none">
                            <a class="btn btn-secondary" href="{{ path('app_login') }}" title="Login">Login</a>
                        </li>
                        <li class="nav-item d-lg-none">
                            <a class="nav-link" href="{{ path('app_register') }}" title="Sign up">Sign up</a>
                        </li>
                        <li class="nav-item d-lg-inline d-none">
                            <a class="btn btn-secondary" href="{{ path('app_register') }}" title="Sign up">Sign up</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('home') }}
{% endblock %}