{% extends 'base.html.twig' %}

{% block title %}Quests{% endblock %}

{% block body %}
    {{ parent() }}
    <main>
        <div class="container">
            <h1 class="mb-5 text-center">All Quests</h1>
            {% if quests is empty %}
                <p>No quests available.</p>
            {% else %}
                <div class="row">
                    {% for quest in quests %}
                        <div class="col-md-6">
                            {{ include('/quest/quest_card.html.twig', { 'quest': quest }) }}
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('quests') }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('quests') }}
{% endblock %}